{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",

    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],

    "lib": ["ES2021"],

    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src"]
}